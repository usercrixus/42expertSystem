{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug expert (pick test file)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/expert",
      "args": [
        "${input:rulesFile}"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "make: build expert",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug expert (custom input path)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/expert",
      "args": [
        "${input:customInput}"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "make: build expert",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ],
  "inputs": [
    {
      "id": "rulesFile",
      "type": "pickString",
      "description": "Choose an input file to run",
      "options": [
        "${workspaceFolder}/tests/and_not.txt",
        "${workspaceFolder}/tests/or_xor.txt",
        "${workspaceFolder}/tests/simple.txt",
        "${workspaceFolder}/tests/undefined_cycle.txt",
        "${workspaceFolder}/tests/subject.txt"
      ],
      "default": "${workspaceFolder}/tests/simple.txt"
    },
    {
      "id": "customInput",
      "type": "promptString",
      "description": "Enter full path to input file",
      "default": "${workspaceFolder}/tests/simple.txt"
    }
  ]
}

